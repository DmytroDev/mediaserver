	<!-- from bootstrap-beans.xml -->
	<!-- Timer definition -->
    <bean name="Timer"
		class="org.mobicents.media.server.impl.clock.TimerImpl">
        <property name="heartBeat">20
        </property>
    </bean>

	<!-- Media Server -->
