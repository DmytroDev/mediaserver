	<!-- RTP stuff configuration -->
    <bean name="RTPAudioFactory1"
		class="org.mobicents.media.server.impl.rtp.RtpFactory">
        <property name="bindAddress">127.0.0.1</property>
        <property name="localPorts">
            <map class="java.util.Hashtable" keyClass="java.lang.String" valueClass="java.lang.Integer">
                <entry>
                    <key>audio</key><value>9201</value>
                </entry>
            </map>
        </property>
        <property name="jitter">60</property>
        <property name="timer">
            <inject bean="Timer" />
        </property>
         <property name="period">20</property>
    </bean>
