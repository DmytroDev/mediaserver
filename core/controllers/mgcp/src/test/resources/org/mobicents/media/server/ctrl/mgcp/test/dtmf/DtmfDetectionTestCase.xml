                <entry><key>audio</key><value><inject bean="TxChannelFactory"/></value></entry>
            </map>
        </property>
        <property name="rxChannelFactory">
            <map class="java.util.Hashtable" keyClass="java.lang.String" valueClass="org.mobicents.media.server.resource.ChannelFactory">
                <entry><key>audio</key><value><inject bean="RxChannelFactory"/></value></entry>
            </map>
        </property>
    </bean>    


