<?xml version="1.0" encoding="UTF-8"?>

<project default="usage" name="JBoss/AOP">
	<!--
	      Note that this build file is not runnable on its own. It is included from each
	      example's build.xml. Also, all paths are relative to the example sub-folders,
	      rather than from this parent folder
	   -->

	<property name="jboss.aop.root" value="../aop-test" />
	<property name="jboss.aop.lib" value="${jboss.aop.root}/lib" />



	<target name="usage">
		<echo>Run one of the following targets:</echo>
		<echo> ant run.aopc          Run with compile-time weaving</echo>
		<echo> ant run.loadtime      Run with loadtime weaving</echo>
	</target>

	<target name="_prepare" description="Set up the common paths and properties needed later">

		<path id="jboss.aop.classpath">
			<fileset dir="${jboss.aop.lib}">
				<include name="*.jar" />
			</fileset>
		</path>

		<path id="mms.classpath">
			<pathelement location="/home/abhayani/workarea/mobicents/svn/trunk/servers/media/core/server-impl/target/mms-impl-2.0.0.CR1-SNAPSHOT.jar" />
			<pathelement location="/home/abhayani/workarea/mobicents/svn/trunk/servers/media/core/server-spi/target/mms-spi-2.0.0.CR1-SNAPSHOT.jar" />			
			<pathelement location="/home/abhayani/.m2/repository/log4j/log4j/1.2.15/log4j-1.2.15.jar" />			
			<pathelement location="/home/abhayani/.m2/repository/org/jboss/jboss-common-core/2.2.14.GA/jboss-common-core-2.2.14.GA.jar" />			
		</path>

		<property name="aopjar" value="${jboss.aop.lib}/jboss-aop.jar" />

		<path id="classpath">
			<path refid="mms.classpath" />
			<path refid="jboss.aop.classpath" />
			<pathelement path="." />
		</path>

		<delete>
			<fileset dir="." includes="**/*.class" />
		</delete>
	</target>


	<target name="_compile" depends="_prepare" description="Compile the sources">

		<javac srcdir="." destdir="." debug="on" deprecation="on" optimize="off" includes="**">
			<classpath refid="classpath" />
		</javac>
	</target>

	<target name="_aopc" depends="_compile" description="Compile-time weave the classes using a jboss-aop.xml file">

		<taskdef name="aopc" classname="org.jboss.aop.ant.AopC" classpathref="jboss.aop.classpath" />

		<aopc compilerclasspathref="classpath" classpathref="classpath">
			<sysproperty key="jboss.aop.path" value="jboss-aop.xml" />
			<classpath path="." />
			<src path="." />
			<aoppath path="jboss-aop.xml" />
		</aopc>
	</target>


	<target name="_aopc.annotated" depends="_compile" description="Compile-time weave the classes using annotations to configure">

		<taskdef name="aopc" classname="org.jboss.aop.ant.AopC" classpathref="jboss.aop.classpath" />

		<aopc compilerclasspathref="classpath" classpathref="classpath">
			<sysproperty key="jboss.aop.class.path" value="." />
			<classpath path="." />
			<src path="." />
			<aopclasspath path="." />
		</aopc>
	</target>


	<!-- These are the main targets to be used -->

	<target name="_run.aopc" depends="_aopc" description="Run the example using compile-time weaving with the jboss-aop.xml configuration file enabled">

		<java fork="yes" failOnError="true" className="Driver">
			<sysproperty key="jboss.aop.path" value="jboss-aop.xml" />
			<classpath refid="classpath" />
		</java>
	</target>


	<target name="_run.aopc.annotated" depends="_aopc.annotated" description="Run the example using compile-time weaving with annotation configuration enabled">

		<java fork="yes" failOnError="true" className="Driver">
			<sysproperty key="jboss.aop.class.path" value="." />
			<classpath refid="classpath" />
		</java>
	</target>

	<target name="_run.loadtime" depends="_compile" description="Run the example using loadtime-time weaving with the jboss-aop.xml configuration file enabled">

		<java fork="yes" failOnError="true" className="Driver">
			<sysproperty key="jboss.aop.path" value="jboss-aop.xml" />
			<jvmarg value="-javaagent:${aopjar}" />
			<classpath refid="classpath" />
		</java>
	</target>


	<target name="_run.loadtime.annotated" depends="_compile" description="Run the example using loadtime-time weaving with annotation configuration enabled">

		<java fork="yes" failOnError="true" className="Driver">
			<sysproperty key="jboss.aop.class.path" value="." />
			<jvmarg value="-javaagent:${aopjar}" />
			<classpath refid="classpath" />
		</java>
	</target>

	<target name="run.aopc" depends="_run.aopc" />

	<target name="run.loadtime" depends="_run.loadtime" />
</project>

